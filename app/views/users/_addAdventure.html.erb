
<%form_tag(addAdventure_path, method:"post", remote: true, :id=> "addAdventure") do %>
  <%= label_tag(:title, "Adventure Name:") %>
  <%= text_field_tag(:title) %><br>

  <%= label_tag(:categories, "Categories:") %>
  <%= text_field_tag(:categories) %><br>

  <%= label_tag(:duration, "Duration:") %>
  <%= text_field_tag(:duration) %><br>

  <%= label_tag(:description, "Description:") %>
  <%= text_field_tag(:description) %><br>

  <%= label_tag(:start_city, "Starting City:") %>
  <%= text_field_tag(:start_city) %><br>

  <%= label_tag(:image_url, "Image URL:") %>
  <%= text_field_tag(:image_url) %><br>

  <%= submit_tag("Add Adventure") %>

